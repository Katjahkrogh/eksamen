---
import "../styles/style.css";
---

<div id="tpp-card">
  <div class="svg-container">
    <p>svg her</p>
    <!-- plads til illustration her -->
  </div>
  <h3 class="overskrift">Enkelthed</h3>
  <p class="paragraf">Vi holder vores produkter og koncepter enkle og overskuelige, så du let kan orientere dig.</p>
  <div class="link">
    <div class="link-tekst">
      <p>Læs mere</p>
      <img src="../svgfiles/pil.svg" alt="" class="pil" />
    </div>
    <hr class="underline" />
  </div>
</div>
<div class="open"></div>

<style>
  #tpp-card {
    background-color: var(--purelyWhite);
    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
    width: 360px;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    gap: 19px;
    position: relative;
    height: 414px;
    margin-bottom: 26px;
  }

  .svg-container {
    width: 126px;
    height: 112px;
    margin-top: 42px;
    background-color: aquamarine;
    display: flex;
    justify-content: center;
    align-items: center;
    align-self: center;
  }

  .paragraf,
  .overskrift {
    text-align: center;
    align-self: center;
  }
  .paragraf {
    width: 330px;
    height: 100px;
  }

  .link {
    align-self: flex-end;
    width: 124px;
    margin-right: 15px;
  }
  .link-tekst {
    display: flex;
    gap: 10px;
    align-items: center;
  }
  .link-tekst p {
    color: var(--purelyBlue);
    margin: 2px;
  }
  .pil {
    width: 16px;
  }

  .underline {
    border: 1.5px solid var(--purelyBlue);
    width: 100%;
    border-radius: 1.5px;
    margin-bottom: 25px;
  }

  /* sektionen når kortet er åbent */

  .open {
    /* position: absolute; */
    background-color: var(--lightSand);
    width: 360px;
    border-radius: 0 0 5px 5px;
    height: 200px;
    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
    margin-top: -31px;
    margin-bottom: 26px;
    z-index: -1;
  }
</style>
