</section>

<style>
  /* mobileview */
  #raad-og-guides {
    padding: 65px 0 38px 0;
    background-color: var(--mediumSand);
    height: 750px;
  }
  h2 {
    margin-left: 30px;
    padding-bottom: 38px;
    color: var(--purelyWhite);
  }
  .caurosel {
    margin-left: 15px;
    display: flex;
    gap: 18px;
    overflow-x: scroll;
    margin-right: 15px;
  }

  /* Media queries */
  /* tablet format (over 600px)*/
  @media (min-width: 600px) {
    #raad-og-guides {
      padding: 65px 0 38px 0;
      background-color: var(--mediumSand);
      height: 630px;
    }
    h2 {
      float: left;
      font-size: 40px;
      margin-right: 15px;
    }
  }

  /* desktop format (over 900px)*/
  @media (min-width: 900px) {
  }

  @media (min-width: 1200px) {
    #raad-og-guides {
      padding: 65px 0 38px 0;
      background-color: var(--mediumSand);
      height: 630px;
    }
    h2 {
      float: left;
      font-size: 40px;
      margin-right: 30px;
    }
  }
</style>
