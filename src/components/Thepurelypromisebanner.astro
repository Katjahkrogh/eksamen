<style>
  #tpp-banner {
    display: flex;
    width: 100%;
    overflow: hidden;

    align-items: center;

    height: 71px;
    background-color: #e2e6df;
  }

  .tpp {
    display: flex;
    color: var(--purelyBlue);
    animation: animate 30s infinite linear;
  }

  h4 {
    line-height: 71px;
    width: max-content;
    color: var(--purelyBlue);
    padding: 15px;
  }
  @keyframes animate {
    0% {
      transform: translateX(-100%);
    }

    100% {
      transform: translateX(0%);
    }
  }

  /* tablet format (over 600px)*/
  @media (min-width: 600px) {
    h4 {
      padding: 15px 20px;
    }
  }

  /* desktop format (over 900px)*/
  @media (min-width: 900px) {
    h4 {
      padding: 15px 30px;
    }
  }

  @media (min-width: 1200px) {
    h4 {
      padding: 15px 40px;
    }
  }
</style>
