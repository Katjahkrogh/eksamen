---
import "../styles/style.css";
---

<section id="hero-index">
  <img src="../images/billede 17.04.2023 13.36.13.webp" alt="" id="img-mobile" />
  <img src="../images/hero/hero-index-kopi.webp" alt="" id="img-desktop" />
</section>

<style>
  /* mobileview */
  #hero-index {
    height: fit-content;
    width: 100vw;
  }

  img {
    width: 100%;
    height: 610px;
    object-fit: cover;
  }

  #img-desktop {
    display: none;
  }
  /* Media queries */
  /* tablet format (over 600px)*/
  @media (min-width: 600px) {
    #img-mobile {
      display: none;
    }
    #img-desktop {
      display: block;
    }
  }

  /* desktop format (over 900px)*/
  @media (min-width: 900px) {
  }

  @media (min-width: 1200px) {
  }
</style>
