---
import "../styles/style.css";
---

<section id="bestseller-card">
  <div class="container">
    <div class="img-wrapper">
      <img src="../products/210318_PurelyProfessional-299844-e1678279419699-1024x1024.jpg" alt="" class="product-img" />
      <img src="../products/purely_shampoo_4_300ml.jpg" alt="" class="hover-img" />
      <div class="overlay">
        <p>Til krøllet går</p>
        <img src="../svgfiles/krollet.svg" alt="hårtype" />
      </div>
    </div>
  </div>
  <h3>Shampoo 0</h3>
  <h4>179 kr.</h4>
</section>

<style>
  /* mobileview */
  #bestseller-card {
    width: 323px;
  }
  .product-img {
    height: 417px;
    width: 323px;
    object-fit: cover;
  }
  h3 {
    margin: 12px 0px 4px 0px;
  }

  /* Tekst oven på produktbillede */
  .container {
    position: relative;
  }

  .image-wrapper {
    position: relative;
    display: inline-block;
  }

  .overlay {
    position: absolute;
    bottom: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    width: 100%;
    height: 100%;
    color: var(--purely-white);
    transition: opacity 0.3s ease;
  }
  .overlay img {
  }
  .overlay p {
  }

  /* Hover billede skifter */
  .image-wrapper:hover .product-img {
    opacity: 0;
  }

  .image-wrapper:hover .hover-img {
    opacity: 1;
  }

  .image-wrapper:hover .overlay {
    opacity: 1;
  }
</style>
