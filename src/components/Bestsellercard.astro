<style>
  /* mobileview */
  .bestseller-card {
    width: 323px;
    background-color: var(--purelyWhiteSeeThrough);
    border-radius: 5px;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  }
  .product-img,
  .hover-img {
    position: absolute;
    top: 0;
    left: 0;
    height: 417px;
    width: 323px;
    object-fit: cover;
    transition: opacity 0.3s ease;
    border-radius: 5px 5px 0px 0px;
    border: 1px solid var(--purelyWhiteSeeThrough);
  }
  h3 {
    margin: 12px 0px 4px 5px;
  }

  h4 {
    margin: 2px 0px 5px 5px;
  }

  /* Tekst oven på produktbillede */
  .container {
    position: relative;
  }

  .img-wrapper {
    position: relative;
    display: inline-block;
    height: 417px;
    width: 323px;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    gap: 10px;
    align-items: flex-end;
    justify-content: right;
    width: 100%;
    height: 100%;
    opacity: 1;
    transition: opacity 0.3s ease;
    padding: 10px;
  }
  .overlay p {
    color: var(--purelyWhite);
  }

  /* Hover billede skifter */
  .hover-img {
    opacity: 0;
  }
  .img-wrapper:hover .product-img {
    opacity: 0;
  }

  .img-wrapper:hover .hover-img {
    opacity: 1;
  }

  .img-wrapper:hover .overlay {
    opacity: 0;
  }
</style>
