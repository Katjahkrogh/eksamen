---
import "../styles/style.css";
const { img, navn, tekst } = Astro.props;
---

<section id="hero">
  <img src={img} alt="" class="hero-img" />
  <div class="tekst">
    <h1>{navn}</h1>
    <h4 class="h4-hero">{tekst}</h4>
  </div>
</section>

<style>
  /* mobileview */
  #hero {
    width: 100%;
    height: 507px;
    display: grid;
    position: relative;
  }

  #hero::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(147, 165, 161, 0.8);
    z-index: 1;
  }

  .hero-img {
    width: 100%;
    height: 507px;
    object-fit: cover;
    grid-area: 1/1/2/2;
  }
  .tekst {
    width: 330px;
    height: 100%;
    margin-left: 15px;
    grid-area: 1/1/2/2;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    gap: 12px;
    z-index: 2;
  }
  .h4-hero {
    color: var(--purelyWhite);
    margin-bottom: 80px;
  }
  /* Media queries */
  /* tablet format (over 600px)*/
  @media (min-width: 600px) {
  }

  /* desktop format (over 900px)*/
  @media (min-width: 900px) {
    .tekst {
      width: 530px;
      margin-left: 30px;
    }
    .h4-hero {
      margin-bottom: 60px;
    }
  }

  @media (min-width: 1200px) {
    .tekst {
      width: 660px;
      padding-bottom: 30px;
    }
    .h4-hero {
      margin-bottom: 30px;
    }

    #hero {
      height: 70vh;
    }

    .hero-img {
      height: 70vh;
    }
  }
</style>
