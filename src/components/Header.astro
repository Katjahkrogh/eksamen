---
import "../styles/style.css";
---

<header id="header">
  <nav id="nav">
    <div id="logo">
      <a href="/"><img src="../images/logo-hvid.webp" alt="logo" /></a>
    </div>
    <div class="burger-menu">
      <div class="burger"></div>
      <div class="burger"></div>
      <div class="burger"></div>
    </div>
    <div class="menu">
      <ul>
        <li><a href="produkt" class="underline-effect">Shop</a></li>
        <li>
          <a href="purelypromise" class="underline-effect">The Purely Promise</a>
        </li>
        <li><a href="refilleries" class="underline-effect">Refilleries</a></li>
        <li><a href="om" class="underline-effect">Om Purely</a></li>
        <li><a href="vidensbank" class="underline-effect">Vidensbank</a></li>
      </ul>
      <div id="icons">
        <img src="../svgfiles/soegefelt.svg" alt="søgefelt" id="soeg" />
        <img src="../svgfiles/kurv.svg" alt="kurv" />
      </div>
      <div id="socials">
        <a href="#"><img src="../svgfiles/instagram-logo.svg" alt="Instagram logo" /></a>
        <a href="#"><img src="../svgfiles/facebook-logo.svg" alt="Facebook logo" /></a>
        <a href="#"><img src="../svgfiles/mail-logo.svg" alt="Mail logo" /></a>
      </div>
    </div>
  </nav>
</header>

<style>
  /* mobileview */

  #header {
    background-color: var(--darkSand);
    padding: 25px;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 999;
  }
  #socials {
    display: flex;
    gap: 28px;
    align-items: center;
    margin-top: 15%;
  }

  #socials img {
    width: 40px;
  }

  #logo img {
    width: 60px;
    height: 48px;
    vertical-align: middle;
  }

  .burger-menu {
    display: none;
  }

  .menu {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .underline-effect {
    display: inline-block;
    position: relative;
  }

  .underline-effect::before {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 0;
    height: 1px;
    background-color: var(--purelyWhite);
    transition: width 0.5s ease-out;
  }

  .underline-effect:hover::before {
    width: 100%;
    left: 0;
    right: auto;
  }
  .menu li {
    list-style: none;
  }

  #icons {
    display: none;
  }

  li a {
    margin: 15px 0;
  }

  a {
    font-size: 1.8rem;
    color: var(--purelyWhite);
    font-family: Open Sans, sans-serif;
  }

  .burger-menu {
    position: absolute;
    top: 35px;
    right: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 25px;
    cursor: pointer;
  }

  .burger {
    width: 100%;
    height: 3px;
    background-color: var(--purelyWhite);
    transition: transform 0.3s;
  }
  .burger-menu.active .burger:nth-child(1) {
    transform: translateY(10px) rotate(45deg);
  }
  .burger-menu.active .burger:nth-child(2) {
    opacity: 0;
  }

  .burger-menu.active .burger:nth-child(3) {
    transform: translateY(-12.5px) rotate(-45deg);
  }
  .menu {
    display: none;
  }
  .menu.active {
    display: flex;
    flex-direction: column;
    position: fixed;
    right: 0;
    width: 100%;
    z-index: 9999;
    background-color: var(--darkSand);
    position: sticky;
    gap: 30px;
    height: 100vh;
  }

  ul {
    text-align: center;
  }

  /* Media queries */
  /* tablet format (over 600px)*/
  @media (min-width: 800px) {
    #header {
      transition: background-color 0.8s ease;
    }
    #nav {
      display: flex;
      align-items: center;
    }
    #icons img {
      max-height: 20px;
    }

    #logo {
      margin-right: auto;
    }

    #logo img {
      width: 60px;
      height: auto;
    }
    .burger-menu {
      display: none;
    }

    #socials {
      display: none;
    }

    .menu {
      display: flex;
      justify-content: flex-end;
    }

    .menu li {
      display: inline-block;
      margin-left: 10px;
      margin-right: 20px;
    }

    a {
      font-size: 15px;
      color: var(--purelyWhite);
      font-family: Open Sans, sans-serif;
    }

    li a {
      margin-left: 10px;
      margin-top: 0;
      margin-bottom: 0;
    }

    #icons {
      display: block;
    }
  }

  /* desktop format (over 900px)*/
  @media (min-width: 900px) {
    .menu li {
      margin-right: 30px;
    }

    a {
      font-size: 16px;
    }

    #logo img {
      width: 80px;
      height: auto;
    }

    #icons img {
      max-height: 22px;
      margin-left: 5px;
    }
  }

  @media (min-width: 1200px) {
    #icons img {
      max-height: 24px;
      margin-left: 10px;
    }

    a {
      font-size: 20px;
    }

    .menu li {
      margin-right: 40px;
    }
  }
</style>

<script>
  const header = document.getElementById("header");
  const burgerMenu = document.querySelector(".burger-menu");
  const menu = document.querySelector(".menu");

  burgerMenu.addEventListener("click", function () {
    burgerMenu.classList.toggle("active");
    menu.classList.toggle("active");
  });

  menu.addEventListener("click", function () {
    burgerMenu.classList.remove("active");
    menu.classList.remove("active");
  });

  window.addEventListener("scroll", function () {
    // Tjek om skærmstørrelsen er over 700px
    if (window.innerWidth > 800) {
      // Tjek om der er scrollet ned
      if (window.scrollY > 0) {
        // Hvis der er scrollet ned, tilføj baggrundsfarven til header
        header.style.backgroundColor = "var(--darkSand)";
      } else {
        header.style.backgroundColor = "transparent";
      }
    } else {
      header.style.backgroundColor = "var(--darkSand)"; // Konstant baggrundsfarve under 800px
    }
  });
</script>
