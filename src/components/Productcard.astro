---
import "../styles/style.css";
const { img1, produktnavn, pris, link } = Astro.props;
---

<section id="product-card">
  <a href={link}
    ><img src={img1} alt="" title="produkt-img" />
    <div id="tekst">
      <h4 title="navn">{produktnavn}</h4>
      <p title="pris">{pris}</p>
    </div>
  </a>
  <button id="knap">FÃ¸j til kurv</button>
</section>

<style>
  /* mobileview */

  #product-card {
    background-color: var(--purelyWhite);
    max-width: fit-content;
    display: flex;
    flex-direction: column;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    border-radius: 5px;
  }
  img {
    width: 160px;
    height: 160px;
  }

  #tekst {
    margin-left: 5px;
    margin-bottom: 15px;
    margin-top: 5px;
    text-align: left;
  }
  h4 {
    font-weight: 300;
    font-size: 18px;
  }

  p {
    font-size: 13px;
    font-weight: 700;
  }

  #knap {
    background-color: var(--darkSand);
    border: none;
    color: var(--purelyWhite);
    padding: 6px;
    font-weight: 400;
    font-family: "Open Sans";
    border-radius: 5px;
    align-items: center;
    margin-left: 5px;
    margin-right: 5px;
    margin-bottom: 5px;
  }

