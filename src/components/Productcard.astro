---
import "../styles/style.css";
const { img1, produktnavn, pris, link } = Astro.props;
---

<section id="product-card">
  <a href={link}
    ><img src={img1} alt="" title="produkt-img" />
    <div id="tekst">
      <h4 title="navn">{produktnavn}</h4>
      <p title="pris">{pris}</p>
    </div>
  </a>
  <button id="knap">FÃ¸j til kurv</button>
</section>

<style>
  /* mobileview */

  #product-card {
    background-color: var(--purelyWhiteSeeThrough);
    width: 170px;
    height: 330px;
    display: flex;
    flex-direction: column;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    border-radius: 5px;
  }
  img {
    width: 100%;
    height: 230px;
    object-fit: cover;
    border-radius: 5px 5px 0 0;
  }

  #tekst {
    margin-left: 5px;
    margin-bottom: 15px;
    margin-top: 5px;
    text-align: left;
  }
  h4 {
    font-weight: 300;
    font-size: 16px;
    line-height: 21.79px;
  }

  p {
    font-weight: 700;
    font-size: 12px;
    line-height: 16px;
  }

  #knap {
    background-color: var(--darkSand);
    border: none;
    color: var(--purelyWhite);
    padding: 6px;
    font-weight: 400;
    font-family: "Open Sans";
    border-radius: 5px;
    margin-left: 5px;
    margin-right: 5px;
    margin-bottom: 5px;
  }

  /* Media queries */
  /* tablet format (over 600px)*/
  @media (min-width: 600px) {
  }

  /* desktop format (over 900px)*/
  @media (min-width: 800px) {
    #product-card {
      width: 190px;
    }
  }

  @media (min-width: 900px) {
    #product-card {
      width: 220px;
    }
  }
  @media (min-width: 1200px) {
    img {
      height: 280px;
    }
    #product-card {
      width: 280px;
      height: 400px;
    }

    h4 {
      font-size: 20px;
      line-height: 28px;
      margin-left: 10px;
    }
    p {
      font-size: 16px;
      line-height: 20px;
      margin-left: 10px;
    }
    #knap {
      font-size: 20px;
      margin: 0 10px 10px;
    }
  }
</style>
